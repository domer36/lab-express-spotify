<div class="row">
{{#each this.items}}
    
<div class="card col-sm-12 col-md-6 col-lg-3" style="width: 18rem;">
  <img src={{this.images.[0].url}} class="card-img-top">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <a href="/albums/{{this.id}}" class="btn btn-primary">View Albums</a>
  </div>
</div>

{{/each}}
</div>